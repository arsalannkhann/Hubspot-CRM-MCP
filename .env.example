# ============================================
# LLM PROVIDER CONFIGURATION
# ============================================

# Choose your LLM provider: gemini, llama3, openai, claude, custom
LLM_PROVIDER=gemini

# LLM API Keys (only needed for cloud-based LLMs)
OPENAI_API_KEY=sk-...your-openai-key-here...
GEMINI_API_KEY=AI...your-gemini-key-here...
ANTHROPIC_API_KEY=sk-ant-...your-claude-key-here...

# Local LLM Settings (for Llama3 or other local models)
LOCAL_LLM_HOST=http://localhost:11434
LOCAL_LLM_MODEL=llama3

# ============================================
# BUSINESS TOOL API KEYS
# ============================================

# 1. Web Search
SERPAPI_KEY=your-serpapi-key-here
GOOGLE_CUSTOM_SEARCH_KEY=your-google-search-key-here
GOOGLE_CUSTOM_SEARCH_CX=your-google-search-engine-id-here

# 2. Database
# PostgreSQL: postgresql://user:password@localhost/dbname
# MySQL: mysql://user:password@localhost/dbname
# SQLite: sqlite:///path/to/database.db
DATABASE_URL=postgresql://user:password@localhost/dbname

# 3. CRM Integration
HUBSPOT_PRIVATE_APP_ACCESS_TOKEN=pat-na1-...your-hubspot-token...
SALESFORCE_TOKEN=your-salesforce-token-here
SALESFORCE_DOMAIN=your-instance.my.salesforce.com

# 4. Data Enrichment
CLEARBIT_KEY=sk_...your-clearbit-key...
PEOPLE_DATA_LABS_KEY=your-pdl-api-key-here

# 5. Calendar & Appointments
GOOGLE_CALENDAR_CREDENTIALS=/path/to/google-calendar-credentials.json
OUTLOOK_CLIENT_ID=your-outlook-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret

# 6. Twilio Communication
TWILIO_SID=AC...your-twilio-sid...
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# 7. Email Services
SENDGRID_KEY=SG...your-sendgrid-key...
MAILGUN_KEY=key-...your-mailgun-key...
MAILGUN_DOMAIN=mg.yourdomain.com
EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# 8. Stripe Payments
STRIPE_KEY=sk_live_...your-stripe-key...
STRIPE_WEBHOOK_SECRET=whsec_...your-webhook-secret...

# 9. Docs/Knowledge Base
NOTION_KEY=secret_...your-notion-key...
GOOGLE_DRIVE_KEY=your-google-drive-api-key
GOOGLE_DRIVE_CREDENTIALS=/path/to/google-drive-credentials.json

# 10. Social Media
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
TWITTER_BEARER_TOKEN=AAA...your-twitter-bearer-token...
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# ============================================
# MCP SERVER CONFIGURATION
# ============================================

# MCP Server Settings
MCP_SERVER_NAME=business-tools
MCP_SERVER_PORT=5000
MCP_LOG_LEVEL=INFO

# Security Settings
ENABLE_AUTH=false
AUTH_TOKEN=your-secure-auth-token-here

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
